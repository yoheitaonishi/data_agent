<!-- Main Content -->
<div class="flex-1 flex flex-col overflow-hidden">
    
    <!-- Header -->
    <header class="bg-white border-b border-gray-200 h-16 flex items-center justify-between px-6 shadow-sm flex-shrink-0">
        <h1 class="text-xl font-bold text-gray-800" id="page-title">
            取込履歴一覧
        </h1>
        <%
=begin%>
 <div class="flex items-center space-x-4">
            <div class="relative hidden sm:block">
                <input 
                    type="text" 
                    placeholder="ジョブID検索..." 
                    class="pl-10 pr-4 py-2 border border-gray-300 rounded-full text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 w-64 transition-all"
                >
                <i data-lucide="search" class="w-4 h-4 text-gray-400 absolute left-3 top-2.5"></i>
            </div>
            <button class="p-2 rounded-full hover:bg-gray-100 relative">
                <i data-lucide="bell" class="w-5 h-5 text-gray-600"></i>
                <span class="absolute top-1 right-1 h-2 w-2 rounded-full bg-red-500 border border-white"></span>
            </button>
            <div class="h-8 w-8 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-700 font-bold text-sm">
                AD
            </div>
        </div> 
<%
=end%>
    </header>

    <!-- Content Body -->
    <main class="flex-1 overflow-y-auto p-6" id="main-scroll">
        
        <%
=begin%>
 <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-xl p-5 shadow-sm border border-gray-100">
                <div class="text-gray-500 text-sm font-medium mb-1">本日の取込総件数</div>
                <div class="text-3xl font-bold text-gray-800">56,065</div>
                <div class="text-xs text-green-600 mt-2 flex items-center">
                    <span class="bg-green-100 px-1 rounded mr-1">↑ 12%</span> 昨日比
                </div>
            </div>
            <div class="bg-white rounded-xl p-5 shadow-sm border border-gray-100">
                <div class="text-gray-500 text-sm font-medium mb-1">成功率</div>
                <div class="text-3xl font-bold text-gray-800">98.2%</div>
            </div>
            <div class="bg-white rounded-xl p-5 shadow-sm border border-gray-100 relative overflow-hidden">
                <div class="absolute right-0 top-0 h-full w-1 bg-red-500"></div>
                <div class="text-gray-500 text-sm font-medium mb-1">要対応エラー</div>
                <div class="text-3xl font-bold text-red-600">
                  <%= @initial_data.count { |d| d[:requiredAction] } %>件
                </div>
                <div class="text-xs text-red-600 mt-2 font-medium">至急確認してください</div>
            </div>
              <div class="bg-white rounded-xl p-5 shadow-sm border border-gray-100">
                <div class="text-gray-500 text-sm font-medium mb-1">処理中</div>
                <div class="text-3xl font-bold text-blue-600">
                  <%= @initial_data.count { |d| d[:status] == 'processing' } %>件
                </div>
                <div class="text-xs text-blue-600 mt-2 animate-pulse">バックグラウンド実行中</div>
            </div>
        </div> 
<%
=end%>

        <!-- Data Table Section -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 flex flex-col h-[600px]">
            <!-- Table Toolbar -->
            <div class="p-5 border-b border-gray-200 flex flex-col md:flex-row justify-between items-center gap-4 flex-shrink-0">
                <div class="flex items-center gap-2">
                    <h2 class="text-lg font-semibold text-gray-800">取込ジョブ一覧</h2>
                    <span id="total-count" class="bg-gray-100 text-gray-600 text-xs px-2 py-1 rounded-full"><%= @initial_data.size %> 件</span>
                </div>

                <div class="flex items-center space-x-3 w-full md:w-auto">
                    <!-- Filter Tabs -->
                    <div class="flex bg-gray-100 p-1 rounded-lg">
                        <button class="px-3 py-1.5 text-sm font-medium rounded-md transition-all bg-white text-gray-900 shadow-sm">
                            すべて
                        </button>
                        <button class="px-3 py-1.5 text-sm font-medium rounded-md transition-all flex items-center text-gray-500 hover:text-gray-700">
                            要対応
                            <% action_needed_count = @initial_data.count { |d| d[:requiredAction] } %>
                            <% if action_needed_count > 0 %>
                              <span class="ml-2 bg-red-500 text-white text-[10px] px-1.5 rounded-full"><%= action_needed_count %></span>
                            <% end %>
                        </button>
                    </div>

                    <%
=begin%>
 <button class="flex items-center px-3 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50 bg-white">
                        <i data-lucide="filter" class="w-4 h-4 mr-2"></i>
                        絞り込み
                    </button> 
<%
=end%>
                    <%= button_to obic7_import_demo_path, method: :post, class: "flex items-center px-3 py-2 bg-green-600 text-white rounded-lg text-sm font-medium hover:bg-green-700 shadow-sm" do %>
                        <i data-lucide="upload-cloud" class="w-4 h-4 mr-2"></i>
                        OBIC7取込デモ実行
                    <% end %>
                    <%= button_to execute_agentic_job_path, method: :post, class: "flex items-center px-3 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium hover:bg-blue-700 shadow-sm" do %>
                        <i data-lucide="refresh-cw" class="w-4 h-4 mr-2"></i>
                        即時実行
                    <% end %>
                </div>
            </div>

            <!-- Table Container -->
            <div class="flex-1 overflow-auto relative">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50 sticky top-0 z-10">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">取込元</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">取込先</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">実行日時</th>
                            <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">ステータス</th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">取込件数</th>
                            <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">要対応</th>
                            <th scope="col" class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
                        </tr>
                    </thead>
                    <tbody id="table-body" class="bg-white divide-y divide-gray-200">
                        <% if @initial_data.empty? %>
                            <tr>
                                <td colspan="8" class="px-6 py-12 text-center text-gray-400">
                                    <div class="flex flex-col items-center justify-center">
                                        <i data-lucide="database" class="w-12 h-12 mb-2 opacity-20"></i>
                                        <p>データが見つかりません</p>
                                    </div>
                                </td>
                            </tr>
                        <% else %>
                            <% @initial_data.each do |item| %>
                                <tr class="hover:bg-gray-50 transition-colors group">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <i data-lucide="file-text" class="w-4 h-4 text-gray-400 mr-3"></i>
                                            <%= link_to item[:id], agentic_job_path(item[:id]), class: "text-sm font-medium text-blue-600 group-hover:underline" %>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                                        <%= item[:source] %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                                        <%= item[:destination] %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                        <%= item[:date] %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-center">
                                        <%= status_badge(item[:status]) %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-mono text-gray-600">
                                        <%= item[:count].to_s.reverse.gsub(/(\d{3})(?=\d)/, '\1,').reverse %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-center">
                                        <% if item[:requiredAction] %>
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                                <i data-lucide="alert-circle" class="w-3 h-3 mr-1"></i>要対応
                                            </span>
                                        <% else %>
                                            <span class="text-gray-300">-</span>
                                        <% end %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                       <button class="text-gray-400 hover:text-gray-600">
                                            <i data-lucide="more-horizontal" class="w-5 h-5"></i>
                                       </button>
                                    </td>
                                </tr>
                            <% end %>
                        <% end %>
                    </tbody>
                </table>
            </div>
            
            <!-- Pagination -->
            <div class="bg-gray-50 px-6 py-3 border-t border-gray-200 flex items-center justify-between flex-shrink-0 rounded-b-xl">
                <div class="text-sm text-gray-500" id="pagination-text">
                    1 - <%= @initial_data.size %> 件を表示中 （全 <%= @initial_data.size %> 件）
                </div>
                <div class="flex space-x-2">
                    <button class="p-1 rounded border border-gray-300 bg-white text-gray-400 hover:bg-gray-50 disabled:opacity-50" disabled>
                        <i data-lucide="chevron-left" class="w-5 h-5"></i>
                    </button>
                    <button class="p-1 rounded border border-gray-300 bg-white text-gray-600 hover:bg-gray-50">
                        <i data-lucide="chevron-right" class="w-5 h-5"></i>
                    </button>
                </div>
            </div>
        </div>
    </main>
</div>

<!-- Icons -->
<script>
    document.addEventListener('DOMContentLoaded', () => {
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
        }
    });
</script>